{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "typeRoots" : ["node_modules/@types", "src/types"],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@theme/*": ["src/theme/*"],
      "@components/*": ["src/components/*"],
      "@state/*": ["src/state/*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ]
}
